<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_event"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/eventsmall"
        android:layout_margin="20sp"
        android:id="@+id/eventName"
        android:maxLength="20"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15sp"
        android:hint="@string/enter_event_name"
        android:background="@drawable/textview"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="10sp"
        app:cardCornerRadius="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/eventRegisterButton"
        android:layout_margin="30sp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"

            android:text="@string/register_event"
            android:background="@drawable/exp_backg"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>