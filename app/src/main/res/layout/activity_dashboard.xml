<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10sp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="80"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Om Novas"
                    android:id="@+id/eventNameDash"
                    android:maxEms="5"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="0sp"
                        android:layout_weight="20"
                        android:onClick="Reset_All"
                        android:layout_height="30sp"
                        android:foregroundGravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        android:src="@drawable/ic_baseline_sync_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:weightSum="1"
                >
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/income"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/expanditure"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:weightSum="1"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_weight="0.5"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="10sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/topo"
                        android:drawablePadding="10sp"
                        android:layout_gravity="center"
                        android:background="@drawable/income_backg"
                        android:id="@+id/eventIncomeDash"
                        android:padding="20sp"
                        android:gravity="center"
                        android:text="12345645"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="10sp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12345645"
                        android:background="@drawable/exp_backg"
                        android:drawablePadding="10sp"
                        android:drawableStart="@drawable/topi"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/eventExpenseDash"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/day_wise_collection_trend"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"/>
<!--        https://github.com/NandagopalR/awesome-android-1-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="30sp"
            android:layout_height="wrap_content"
            >
            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/eventLineChartDash"
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_height="200sp" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        app:cardCornerRadius="50sp"
        android:id="@+id/printData"
        app:cardElevation="30sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Print Data"
            android:textColor="@color/white"
            android:background="@drawable/exp_backg"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:drawableRightCompat="@drawable/arrow"
            android:gravity="center"
            android:padding="20sp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_options"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5sp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_margin="15sp"
                    android:onClick="AddVargani"
                    app:cardElevation="10sp"
                    app:cardCornerRadius="10sp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="15sp"
                        android:background="@drawable/exp_back"
                        android:drawableTop="@drawable/var_in"
                        android:drawablePadding="5sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/vargani"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:onClick="AddExpense"
                    android:layout_weight="0.5"
                    android:layout_margin="15sp"
                    app:cardElevation="10sp"
                    app:cardCornerRadius="10sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:drawablePadding="5sp"
                        android:padding="15sp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:background="@drawable/exp_back"
                        android:ellipsize="end"
                        android:drawableTop="@drawable/exp_out"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/expanditure"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_margin="5sp"
                >
<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_width="0sp"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:layout_margin="15sp"-->
<!--                    app:cardElevation="10sp"-->
<!--                    app:cardCornerRadius="20sp"-->
<!--                    android:layout_height="wrap_content">-->
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:drawablePadding="5sp"-->
<!--                        android:textSize="20sp"-->
<!--                        android:layout_margin="15sp"-->
<!--                        android:maxLines="1"-->
<!--                        android:ellipsize="end"-->
<!--                        android:drawableTop="@drawable/edit_vargani"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="center"-->
<!--                        android:text="Search"/>-->
<!--                </androidx.cardview.widget.CardView>-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="15sp"
                    app:cardElevation="10sp"
                    android:onClick="GetReports"
                    app:cardCornerRadius="20sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:drawablePadding="5sp"
                        android:layout_margin="15sp"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:drawableTop="@drawable/vargani_report"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/event_information"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>
